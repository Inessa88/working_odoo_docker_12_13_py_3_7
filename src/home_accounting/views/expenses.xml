<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="expenses_view_tree" model="ir.ui.view">
        <field name="name">Expenses List</field>
        <field name="model">expenses</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="date_receipt"/>
                <field name="expenses_type_id"/>
                <field name="currency_id_byn" invisible="1"/>
                <field name="amount_byn"/>
                <field name="currency_id_usd" invisible="1"/>
                <field name="amount_usd"/>
                <field name="currency_id_ils" invisible="1"/>
                <field name="amount_ils"/>
                <field name="currency_id_rub" invisible="1"/>
                <field name="amount_rub"/>
            </tree>
        </field>
    </record>

    <record id="expenses_view_search" model="ir.ui.view">
        <field name="name">Expenses Search</field>
        <field name="model">expenses</field>
        <field name="arch" type="xml">
            <search>
                <field name="expenses_type_id"/>
                <field name="date_receipt"/>
                <field name="currency_id_byn"/>
                <field name="amount_byn"/>
                <field name="currency_id_usd"/>
                <field name="amount_usd"/>
                <field name="currency_id_ils"/>
                <field name="amount_ils"/>
                <field name="currency_id_rub"/>
                <field name="amount_rub"/>
            </search>
        </field>
    </record>

    <record id="view_expenses_graph" model="ir.ui.view">
        <field name="model">expenses</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="expenses_type_id"/>
                <field name="amount_byn" type="measure"/>
            </graph>
        </field>
    </record>

    <record id='expenses_action' model='ir.actions.act_window'>
        <field name="name">Expenses</field>
        <field name="res_model">expenses</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,graph</field>
    </record>

</odoo>
