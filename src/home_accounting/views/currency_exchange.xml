<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='currency_exchange_action' model='ir.actions.act_window'>
        <field name="name">Currency exchange</field>
        <field name="res_model">currency_exchange</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="currency_exchange_view_tree" model="ir.ui.view">
        <field name="name">Currency Exchange List</field>
        <field name="model">currency_exchange</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="date_receipt"/>
                <field name="currency_1_id" options="{'no_create': True}"/>
                <field name="amount_1"/>
                <field name="currency_2_id" options="{'no_create': True}"/>
                <field name="amount_2"/>
            </tree>
        </field>
    </record>

</odoo>
